<% provide(:title, @rental.location) %>

<div class="page-header">
  <h1><%= @rental.location %> <small><%= @rental.city %>, <%= @rental.state %> <%= @rental.zip %></small></h1>
</div>

<div class="row">
  <div class="col-md-7">
    <p class="lead">
      <%=
        text = Array.new
        text.push("<b>#{number_to_currency @rental.price}</b>/month")
        text.push("<b>#{@rental.beds}</b> bedrooms") unless @rental.beds.nil?
        text.push("<b>#{@rental.bath}</b> bathrooms") unless @rental.bath.nil?
        raw(text.join(", "))
      %>
      <br />
      <%= link_to "View Pictures", @rental.gallery unless @rental.gallery.nil? %>
    </p>

    <p><%= @rental.description %></p>
    <p><%= raw "<b>Pets:</b> #{@rental.pets}" if !@rental.pets.empty? %></p>
    <p><%= raw "<b>Utilities:</b> #{@rental.utilities}" if !@rental.utilities.empty? %></p>
    <p><%= raw "<b>Phone:</b> #{@rental.phone}" if !@rental.phone.empty? %></p>
    <p><%= raw "<b>Email:</b> #{@rental.email}" if !@rental.email.empty? %></p>
  </div>

  <iframe
    class="col-md-5"
    height="450"
    frameborder="0" style="border:0"
    src="https://www.google.com/maps/embed/v1/place?key=AIzaSyBYByiZLNjr7qYtokXJI2Emk3qAGNhIWVA&q=<%= "#{@rental.location.tr " ", "+"},#{@rental.city},#{@rental.state}+#{@rental.zip}" %>">
  </iframe>
</div>

<p class="text-center small"><%= link_to "edit", edit_rental_path(@rental) %></p>
